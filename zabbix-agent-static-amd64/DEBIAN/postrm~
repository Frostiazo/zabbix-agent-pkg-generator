#!/bin/sh -e

case "$1" in
    failed-upgrade|abort-install|abort-upgrade|disappear|upgrade)
    ;;
    remove)
    ;;
    purge)

        if [ -x /usr/bin/ucf ]; then
           ucf --purge /usr/local/etc/zabbix_agent.conf
           ucf --purge /usr/local/etc/zabbix_agentd.conf
           #rm -f /var/lib/ucf/cache/\:usr\:local\:etc\:zabbix\:zabbix_agentd.conf
        fi
        rm -f /usr/local/etc/zabbix_agent.conf
        rm -f /usr/local/etc/zabbix_agentd.conf

        rm -f /usr/local/etc/zabbix_agentd.log*
        rm -f /usr/local/etc/zabbix_agentd.pid

        #rm -rf /var/run/zabbix 
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_installdebconf
if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi
# End automatically added section
# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d zabbix-agent remove >/dev/null || exit $?
fi
# End automatically added section


exit 0
